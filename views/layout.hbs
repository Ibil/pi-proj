<html>
    <head>
        <title>BORGA (BOaRd Games Application)</title>
        <link href="/bootstrap.min.css" rel="stylesheet">
        <script type="text/javascript" src="/bootstrap.bundle.min.js"></script>
        <script type="text/javascript" src="/borga-logout.js"></script>
    </head>
    <body>
        <ul class="nav nav-tabs">
             <li class="nav-item">
                <a  class="nav-link" href="/app">Home</a>
            </li>
            <li class="nav-item">
                <a  class="nav-link" href="/app/games/popular">Popular Games</a>
            </li>
            <li class="nav-item">
                <a  class="nav-link" href="/app/groups">Groups</a>
            </li>
            <li id="logInOut" class="nav-item">
                {{#if loggedIn}}
                <button id="logout" class="form-control btn-danger" onClick="logOut()">Logout</button>
                {{else}}
                <a  class="nav-link" href="/app/signin">Sign in</a>
                {{/if}}
            </li>
        </ul>

  
        <div class="container">
            <form action ="/app/search/games/" method="get">
                <div class="row">
                    <div class="col">
                        <label>Search for a game: </label>
                        <input type="text" placeholder="Title" name="game">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        
            <h1>BORGA Application</h1>

            <div id="alertPanel">
                {{#if alert}}
                    <div class="alert alert-{{alert.kind}} alert-dismissible fade show" role="alert">
                        <strong>{{alert.title}}</strong>
                        {{alert.message}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {{/if}}
            </div>
        
            {{{body}}}       

        </div>
    </body>
</html>